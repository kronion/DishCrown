extend layout


mixin itempanel(item, index)
   #accordion.panel-group
      .panel.panel-default
        .panel-heading
          h4.panel-title
            a.accordion-toggle(data-toggle='collapse', data-parent='#accordion', href='#collapse#{ index }')
              =item.name
        #collapse#{ index }.panel-collapse.collapse
          .panel-body
            .row-fluid
              .col-md-3
                #tempimage
              .col-md-6
                | Details about item, like rating, reviews
                =item.overall
                textarea.form-control(rows='3', placeholder='Add your comment...')


block topbar
    .row-fluid
        .row-fluid
          .col-md-4
            | {{restaurant image}}
            #tempimage
          .style
            .col-md-8{height:120px;}
          .col-md-8
            #{restaurant.name}
            #{restaurant.contact.number}
            #{restaurant.contact.address}
    <br>  
    


    .row-fluid
        .col-md-10
          each val, index in restaurant.menu
            +itempanel(val, index)

