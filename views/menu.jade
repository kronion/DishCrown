extend layout


mixin itempanel(item, index)
   #accordion.panel-group
      .panel.panel-default
        .panel-heading
          h4.panel-title
            a.accordion-toggle(data-toggle='collapse', data-parent='#accordion', href='##{ index }')
              =item.name
        div(id=index).panel-collapse.collapse
          .panel-body
            .row-fluid
              .col-md-3
                #tempimage
 //             .col-md-6
 //               | Details about item, like rating, reviews
                =item.overall
                span.inline-rating
                    ul.star-rating.small-star
                        li
                          a.one-star(href='#', title='1 star out of 5') 1
                        li
                          a.two-stars(href='#', title='2 stars out of 5') 2
                        li
                          a.three-stars(href='#', title='3 stars out of 5') 3
                        li
                          a.four-stars(href='#', title='4 stars out of 5') 4
                        li
                          a.five-stars(href='#', title='5 stars out of 5') 5
                form.form-group(action='/     ', method='post')
                div  
                  textarea.form-control(rows='3', placeholder='Add your comment...')
                  input.btn.btn-small#dish-submit(type='submit', value='review')


