            input.star.glyphicon.glyphicon-star-empty
            input.star.glyphicon.glyphicon-star-empty
            input.star.glyphicon.glyphicon-star-empty

            form.form-group(action='/     ', method='post')
            div  
              textarea.form-control(rows='3', placeholder='Add your comment...')
              input.btn.btn-small#dish-submit(type='submit', value='review')





