html(lang='en')
head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    meta(name='author', content='')
    title DISHCROWN

    // Bootstrap core CSS 
    link(href='/css/bootstrap.min.css', rel='stylesheet')
    link(href='/css/hint.min.css', rel='stylesheet')
    link(href='/css/flat-ui.css', rel='stylesheet')
    link(href='/css/style.css', rel='stylesheet')

    //
       HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries 
    //if lt IE 9
      script(src='/assets/js/html5shiv.js')
      script(src='/assets/js/respond.min.js')
  body
    .flash 
      block flash
    .container-fluid
      ul.nav.nav-pills.pull-right.smaller
        if !cookie
          li.dropdown
            a.btn-small#login(role='button', data-toggle='dropdown', data-target='#') Login
            ul.dropdown-menu(role='menu', aria-labelledby='login')
              form.form-group#login-form(action='/login', method='post')
                div
                  label Username:
                  input.form-control(type='text', name='username')
                div
                  label Password:
                  input.form-control(type='password', name='password')
                div
                  input.btn.btn-small.smaller(type='submit', value='Log In')
          li.dropdown
            a.btn-small#signup(role='button', data-toggle='dropdown', data-target='#') Sign Up
            ul.dropdown-menu(role='menu', aria-labelledby='signup')
              form.form-group#register-form(action='/register', method='post')
                div

                  label Username:
                  input.form-control(type='text', name='username')
                div 
                  label Name:
                  span.hint--left(data-hint="Use your real name to get freebies for your reviews!")
                    input.form-control(type='text', name='name')
                div
                  label Password:
                  input.form-control(type='password', name='password')
                div
                  input.btn.btn-small.smaller#submit(type='submit', value='Sign Up!')
        //assuming that cookie object is a number that doesn't have to be accessed
        if cookie
          div.pull-left
            if name 
              p 
                = "Hi, " + name + ". Your Score: " + userscore
          div.pull-right
            form.form-group(action='/logout', method='get')
              div  
                input.btn.smaller.btn-small#logout(type='submit', value='Logout')
            
      br
      br
      a.logo.wide-tracking(href='/') DISHCROWN
      .copy
        |- WHAT'LL YOU HAVE TODAY? -

      .topbar
        block topbar

      .content
        block content

      .dish-content
        block dishes

      .display-table
        block display-table
      


    //- Bootstrap core JavaScript
    //-  ================================================== 
    //- Placed at the end of the document so the pages load faster 

    block scripts
      script(src='/js/jquery-2.0.3.min.js')
      script(src='/js/bootstrap.min.js')
      script(src='/js/typeahead.min.js')
      script(type='text/javascript', src='/js/register.js')
      script(type='text/javascript', src='/js/search.js')
